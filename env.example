# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Site Configuration (Required for production email redirects and webhooks)
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Demo Account (optional)
NEXT_PUBLIC_DEMO_EMAIL=demo@lastcall.app
NEXT_PUBLIC_DEMO_PASSWORD=demo123456

# Server-side Supabase access (needed for auto-org bootstrap and BigCommerce integration)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Optional: Production Settings
# NODE_ENV=production

# BigCommerce Webhook Secret (for receiving inventory updates from BigCommerce)
# Note: BigCommerce credentials (store_hash, client_id, access_token) are stored 
# per-organization in the database, not as environment variables.
BIGCOMMERCE_WEBHOOK_SECRET=your_webhook_secret
